<!DOCTYPE html>

<html ng-app="MvcApplication2" ng-controller="LandingPageController">
<head>
    <title ng-bind="models.helloAngular"></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="http://cdn-dev.aldu.net/jquery.mobiscroll/latest/jquery.mobiscroll.min.css" rel="stylesheet" type="text/css" />

    <script src="http://cdn-dev.aldu.net/jquery.mobiscroll/latest/jquery.mobiscroll.min.js" type="text/javascript"></script>
    <link rel="stylesheet" href="jquery.ui.datepicker.mobile.css" />
    <script src="jQuery.ui.datepicker.js"></script>
    <script src="jquery.ui.datepicker.mobile.js"></script>
    <link rel="stylesheet" href="themes/easy.css" />
    <link rel="stylesheet" href="themes/jquery.mobile.icons.min.css" />
    <link rel="stylesheet" href="http://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.css" />
    <script src="http://code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="http://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.js"></script>
    <script>
        //reset type=date inputs to text
        $(document).bind("mobileinit", function () {
            $.mobile.page.prototype.options.degradeInputs.date = true;
        });
    </script>
</head>
<body>
    <div data-role="page" data-theme="a" id="bar">
        <div data-role="panel" id="menu">
            <ul data-role="listview">
                <li><a href="#reg" data-icon="back">Register</a></li>
                <li><a href="#his" data-icon="back">Parking History</a></li>
                <li><a href="#car" data-icon="back">Add Vehicle</a></li>
                <li> <a href="#pay" data-icon="back">Add Payment Method</a> </li>

                <li><a href="#foo" data-icon="back">Cantact Us</a></li>
            </ul>
        </div>
        <div data-role="header" data-position="fixed">

            <a href="#menu" data-icon="grid">Menu</a>
            <img src="logo.png" class="ui-btn-right" />
            <h1>Heathrow</h1>

        </div>

        <div data-role="main" class="ui-content">
            Departure: <input type="date" data-role="date">
            Time :<input name="notifTime" id="notifTime" type="text" data-role="datebox" data-options='{"mode":"timebox", "useNewStyle":true, "overrideTimeFormat": 12, "themeButton": "b", "themeInput": "a", "theme": "b", "themeHeader": "b"}' />
            Return :<input type="date" data-role="date">
            Time :<input type="time" data-role="time">
            <a href="#price" class="ui-btn" data-transition="fade">Get a Quote</a>
        </div>

        <div data-role="footer" data-position="fixed">
            <h1>Easy Valet Parking</h1>

        </div>
    </div>

    <div data-role="page" id="foo" data-theme="a">
        <div data-role="header" data-position="fixed" data-add-back-btn="true">
            <img src="logo.png" class="ui-btn-right" />
            <h1>Heathrow</h1>

        </div>

        <div data-role="main" class="ui-content">
           
            <input type="text" ng-model="models.helloAngular" />
            <h1>{{models.helloAngular}}</h1>
            <label for="date">Date Input:</label>
            <input type="date" name="date" id="date" value="" />
            <a href="https://www.easyvaletparking.co.uk/heathrow/preview.php" rel="external" class="ui-btn" data-transition="flip">Book online</a>
            <a href="#foo" class="ui-btn" data-transition="flip">Next</a>
        </div>

        <div data-role="footer" data-position="fixed">
            <h1>Easy Valet Parking</h1>
        </div>

</div>

    <div data-role="page" id="reg" data-theme="d" ng-model="person">

            <div data-role="header" data-position="fixed" data-add-back-btn="true">

                <img src="logo.png" class="ui-btn-right" />
                <h1>Easy Valet</h1>
                <style>
                     .ng-pristine.ng-invalid{border:1px solid red;}
                    .ng-valid .ng_dirty {border:1px solid green
                    }
                     .error.required{border:1px solid red;}
                </style>
                   
                
            </div>

        <div data-role="main" class="ui-content">
            <form ng-submit="register()" name="regform" novalidate>
                <div class="error" ng-show="regform.title.$error.required"> Please enter your First name Title</div>

                <input type="text" ng-model="person.title" required name="title" />

                <div class="error" ng-show="regform.firstname.$error.required"> Please enter your First name</div>

                <input type="text" ng-model="person.fname" required name="firstname" />
                <div class="error" ng-show="regform.lastname.$error.required"> Please enter your Last name</div>

                <input type="text" ng-model="person.lname" required name="lastname" />

                <input type="email" name="Email" ng-model="person.email" required />
                <div class="error" ng-show="regform.Email.$error.required"> Please enter your Email Address</div>
                <span class="error" ng-show="regform.Email.$error.email">
                    Not valid email!
                </span>


                <input type="number" ng-model="person.tp" required name="mobileno" />
                <div class="error" ng-show="regform.mobileno.$error.required"> Please enter your Mobile No</div>
                <div class="error" ng-show="regform.town.$error.required"> Please enter your Town</div>

                <input type="text" ng-model="person.city" required name="town" />
                <div class="error" ng-show="regform.pcode.$error.required"> Please enter your Post Code</div>

                <input type="text" ng-model="person.postcode" required name="pcode" />
                <button ng-disabled="regform.$invalid" data-transition="fade" class="ui-btn">
                     Register

                </button>
            </form>

        </div>
         

            <div data-role="footer" data-position="fixed">
                <h1>Easy Valet Parking</h1>
            </div>
          
        </div>
            <!--Payment -->
    <div data-role="page" id="pay" data-theme="d">

                <div data-role="header" data-position="fixed" data-add-back-btn="true">

                    <img src="logo.png" class="ui-btn-right" />
                    <h1>Heathrow</h1>

                </div>

                <div data-role="main" class="ui-content">
                    Name: <input type="date" data-role="date">
                    Time :<input name="notifTime" id="notifTime" type="text" data-role="datebox" data-options='{"mode":"timebox", "useNewStyle":true, "overrideTimeFormat": 12, "themeButton": "b", "themeInput": "a", "theme": "b", "themeHeader": "b"}' />
                    Return :<input type="date" data-role="date">
                    Time :<input type="time" data-role="time">
                    <a href="#bar" class="ui-btn" data-transition="fade">Enter</a>
                </div>

                <div data-role="footer" data-position="fixed">
                    <h1>Easy Valet Parking</h1>
                </div>
            </div>
            
           
     <div data-role="page" id="car" data-theme="d">

                <div data-role="header" data-position="fixed" data-add-back-btn="true">

                    <img src="logo.png" class="ui-btn-right" />
                    <h1>Heathrow</h1>

                </div>

                <div data-role="main" class="ui-content">
                    Name: <input type="date" data-role="date">
                    Time :<input name="notifTime" id="notifTime" type="text" data-role="datebox" data-options='{"mode":"timebox", "useNewStyle":true, "overrideTimeFormat": 12, "themeButton": "b", "themeInput": "a", "theme": "b", "themeHeader": "b"}' />
                    Return :<input type="date" data-role="date">
                    Time :<input type="time" data-role="time"><input type="text" name="Title" class="required" value="Title" ng-click="setTitle({{value}})">


<input type="tel" name="Mobile No " class="required" value=" Mobile No" ng-click="setTitle(value)">
<input type="text" name="City" class="required" value="City" ng-click="setTitle(value)">
<input type="text" name="Post Code" class="required" value="Post Code" ng-click="setTitle(value)">
                    <a href="#bar" class="ui-btn" data-transition="fade">Enter</a>
                </div>

                <div data-role="footer" data-position="fixed">
                    <h1>Easy Valet Parking</h1>
                </div>
</div>
    
    <div data-role="page" id="price" data-theme="a">

                    <div data-role="header" data-position="fixed" data-add-back-btn="true">

                        <img src="logo.png" class="ui-btn-right" />
                        <h1>Heathrow</h1>

                    </div>

                    <div data-role="main" class="ui-content">
                        Name: <input type="date" data-role="date">
                        Time :<input name="notifTime" id="notifTime" type="text" data-role="datebox" data-options='{"mode":"timebox", "useNewStyle":true, "overrideTimeFormat": 12, "themeButton": "b", "themeInput": "a", "theme": "b", "themeHeader": "b"}' />
                        Return :<input type="date" data-role="date">
                        Time :<input type="time" data-role="time">
                        <a href="#bar" class="ui-btn" data-transition="fade">Enter</a>
                    </div>

                    <div data-role="footer" data-position="fixed">
                        <h1>Easy Valet Parking</h1>
                    </div>
                 </div>

    <div data-role="page" id="his" data-theme="a">

        <div data-role="header" data-position="fixed" data-add-back-btn="true">

            <img src="logo.png" class="ui-btn-right" />
            <h1>Heathrow</h1>

        </div>

        <div data-role="main" class="ui-content">
            Name: <input type="date" data-role="date">
            Time :<input name="notifTime" id="notifTime" type="text" data-role="datebox" data-options='{"mode":"timebox", "useNewStyle":true, "overrideTimeFormat": 12, "themeButton": "b", "themeInput": "a", "theme": "b", "themeHeader": "b"}' />
            Return :<input type="date" data-role="date">
            Time :<input type="time" data-role="time">
            <a href="#bar" class="ui-btn" data-transition="fade">Enter</a>
        </div>

        <div data-role="footer" data-position="fixed">
            <h1>Easy Valet Parking</h1>
        </div>
    </div>

                    <script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.20/angular.min.js"></script>
                    @Scripts.Render("~/bundles/MvcApplication2")

</body>

</html>